
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "functions-dist",
    "noEmit": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "netlify/functions/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "types.ts",
    "constants.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "functions-dist"
  ]
}
